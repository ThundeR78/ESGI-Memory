<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.esgi.android.project.esgi_memory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".ESGIMemoryApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" android:screenOrientation="unspecified" android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LevelActivity" android:screenOrientation="unspecified" android:configChanges="orientation" /> 
        <activity android:name=".GameActivity" android:screenOrientation="unspecified" android:configChanges="orientation" />
        <activity android:name=".ScoresActivity" android:screenOrientation="unspecified" android:configChanges="orientation" />
        <activity android:name=".SettingsActivity" android:screenOrientation="unspecified" android:configChanges="orientation" />
    </application>

</manifest>
