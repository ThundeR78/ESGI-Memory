<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <!-- for below android 3.x device -->

    <!-- Application theme -->
    <style name="Theme.Memory" parent="@android:style/Theme.Holo.Light">
	    <item name="android:actionBarStyle">@style/Theme.Memory.ActionBarStyle</item>
	</style>
	
	<!-- style for ActionBar -->
	<style name="Theme.Memory.ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">@color/navbar_background</item>
	    
	    <item name="android:titleTextStyle">@style/Theme.Memory.ActionBar.TitleTextStyle</item> 
	</style>
	
	<!-- style for Title ActionBar -->
	<style name="Theme.Memory.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title"> 
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/text_30</item>
		<item name="android:textStyle">bold</item>
	</style>
	
</resources>
    