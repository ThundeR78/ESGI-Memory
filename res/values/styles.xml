<resources xmlns:android="http://schemas.android.com/apk/res/android">

<!-- GENERAL -->
	<style name="scrollview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/activity_background</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
	    <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
	    <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
	    <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>
    
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
<!-- BUTTON -->
    <style name="button_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!-- 	    <item name="android:layout_weight">0.5</item> -->
		<item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="button_level">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
       	<item name="android:layout_margin">20dp</item>
<!-- 	    <item name="android:layout_weight">0.5</item> -->
<!-- 		<item name="android:layout_gravity">center</item> -->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
<!--         <item name="android:gravity">center</item> -->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="button_red" parent="button">
		<item name="android:background">@drawable/button_red_selector</item>
    </style>
    
    <style name="button_score" parent="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="button_score_red" parent="button_score">
        <item name="android:background">@drawable/button_red_selector</item>
    </style>
    <style name="button_score_green" parent="button_score">
        <item name="android:background">@drawable/button_green_selector</item>
    </style>
    
<!-- LABEL -->
	<style name="field_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    
	<style name="label_left" parent="wrap_content">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
	<style name="value_right" parent="wrap_content">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="blinkText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    
<!-- LISTVIEW -->
	<style name="listview_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="listview_header_column">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/list_score_header_column_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>
    <style name="listview_header_column_1" parent="listview_header_column">
        <item name="android:layout_weight">3</item>
    </style>
    <style name="listview_header_column_2" parent="listview_header_column">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="listview">
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:dividerHeight">1dp</item>
    	<item name="android:divider">@color/grey_separator</item>
    	<item name="android:cacheColorHint">@color/transparent</item>
   	</style>
    <style name="list_score_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/grey_light</item>
    </style>
    <style name="list_score_row_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_score_row_column_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_score_row_column_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_score_row_column_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_score_row_column_padding_vertical</item>
    </style>
    <style name="list_score_row_value_1" parent="list_score_row_value">
        <item name="android:layout_weight">3</item>
    </style>
    <style name="list_score_row_value_2" parent="list_score_row_value">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>
    
    
<!-- NAVIGATION -->
	<style name="navigation_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_weight">0.5</item>
		<item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/navigation_button_selector</item>
	</style>
	
<!-- TABLE -->
    <style name="table_layout"> 
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
    </style> 
    <style name="table_row" parent="table_layout"> 
    </style> 
	<style name="table_column"> 
        <item name="android:layout_width">0dp</item> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item> 
        <item name="android:padding">3dp</item>
    </style> 
    <style name="table_column1" parent="table_column"> 
        <item name="android:gravity">left</item> 
        <item name="android:textStyle">bold</item> 
    </style> 
    <style name="table_column2" parent="table_column"> 
        <item name="android:gravity">right</item> 
    </style> 
    
</resources>
