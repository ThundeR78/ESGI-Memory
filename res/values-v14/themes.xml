<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and res/values-v11/styles.xml on API 14+ devices.
    -->

    <!-- Application theme -->
    <style name="Theme.Memory" parent="android:Theme.Holo.Light.DarkActionBar">
	    <item name="android:actionBarStyle">@style/Theme.Memory.ActionBarStyle</item>
	</style>
	
	<!-- style for ActionBar -->
	<style name="Theme.Memory.ActionBarStyle" parent="android:Widget.Holo.ActionBar">
    	<item name="android:background">@color/navbar_background</item>
	    <item name="android:backgroundStacked">@color/navbar_background</item>
	    <item name="android:backgroundSplit">@color/grey</item>
	    
		<item name="android:titleTextStyle">@style/Theme.Memory.ActionBar.TitleTextStyle</item>
	</style>
	
	<!-- style for Title ActionBar -->
	<style name="Theme.Memory.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title"> -->
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/text_30</item>
		<item name="android:textStyle">bold</item>
	</style>
	
</resources>
